<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.example.biblijava.controller.auth.ResetPasswordController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <!-- Champ pour l'adresse e-mail -->
    <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Champ pour le nouveau mot de passe -->
    <PasswordField fx:id="newPasswordField" promptText="New Password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Bouton pour rÃ©initialiser le mot de passe -->
    <Button text="Reset" onAction="#handleResetPassword" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
